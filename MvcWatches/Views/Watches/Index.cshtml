@model MvcWatches.Models.WatchesModelViewModel
@{
    ViewData["Title"] = "Index";
}

<h1 style="font-family:Gigi">Watches List</h1>

<p>
    <a asp-action="Create" style="color:aqua;">Create New</a>
</p>
<form asp-controller="Watches" asp-action="Index" method="get">
    <p>
        <select asp-for="WatchModel" asp-items="Model.Model">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table" style="background-color:white; font-family:Georgia, 'Times New Roman', Times, serif;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].MadeIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watches[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Watches)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MadeIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>


